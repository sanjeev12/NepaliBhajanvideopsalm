      <titles>
         <title>Bhajan731 Khristko Bachan Rakha Samhali</title>
      </titles>
      <authors>
         <author>Nepali Christain Bhajan</author>
      </authors>
      <songbooks>
         <songbook name="bhajan" entry="1"/>
      </songbooks>
